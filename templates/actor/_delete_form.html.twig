<form method="post" action="{{ path('actor_delete', {'slug': actor.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actor.id) }}">
    <button class="btn btn-danger p-1 pr-2 pl-2"><i class="fa fa-trash"></i></button>
</form>
