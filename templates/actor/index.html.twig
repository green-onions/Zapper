{% extends 'base.html.twig' %}

{% block title %}Index des acteur·rice·s{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center align-items-center">
        <h1>Index des acteur·rice·s</h1>
        <h2 class="pt-1"><a href="{{ path('actor_new') }}"><i class="fa fa-plus-circle"></i></a></h2>
    </div>
    <div class="col-12">
        <table class="table text-white">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for actor in actors %}
                <tr>
                    <td>{{ actor.id }}</td>
                    <td>{{ actor.name }}</td>
                    <td>
                        <a href="{{ path('actor_show', {'slug': actor.slug}) }}">Voir</a> /
                        <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">Éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun·e acteur·rice trouvée·e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
