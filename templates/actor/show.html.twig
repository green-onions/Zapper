{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
    <div class="row col-12 m-0 d-flex justify-content-between">
        <div class="row">
            <h1 class="title-admin">{{ actor.name }}</h1>
            <h2 class="pt-1"><a href="{{ path('actor_index') }}"><i class="fa fa-arrow-left"></i></a></h2>
            <h2 class="pt-2"><a href="{{ path('actor_edit', {'slug': actor.slug}) }}"><i class="fa fa-edit"></i></a></h2>
        </div>
        <div class="d-flex align-items-center">
            {{ include('actor/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="col-12">
        <p class="">ID #{{ actor.id }}</p>
        <p class="mb-1">Apparaît dans :</p>
        <ul>
            {% for program in actor.programs %}
                <li><a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></li>
            {% else %}
                <li>Aucune série, il semblerait...</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
