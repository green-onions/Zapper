{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}. <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}
    <div class="d-flex justify-content-center mt-5 pt-3">
        <h1 class="title-admin">Connexion</h1>
    </div>
    <div class="col-4 offset-4">
        <label for="inputEmail" class="mt-3">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword" class="mt-3">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="row d-flex justify-content-between col-4 offset-4 mt-4">
        <div class="checkbox">
            <label>
                <input type="checkbox" name="_remember_me" class="mr-2">Se souvenir de moi
            </label>
        </div>
        <button class="btn btn-lg btn-primary" type="submit">
            <i class="fa fa-check"></i>
        </button>
    </div>
</form>
<div class="col-4 offset-4 mt-5">
    <a class="btn w-100" href="{{ path('app_register') }}">
        Pas encore de compte ? Par ici !
    </a>
</div>
{% endblock %}
