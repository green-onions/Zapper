{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
    <h1>Ajouter une catégorie</h1>
    {{ form_start(form) }}
        <div class="col-3">
            {{ form_widget(form) }}
            <button class="btn btn-light">{{ button_label|default('Enregister') }}</button>
        </div>
    {{ form_end(form) }}
    <h2>Catégories déjà existantes :</h2>
    {% for categorie in categories %}
        <ul>
            <li>{{ categorie.name }}</li>
        </ul>
    {% endfor %}
{% endblock %}
