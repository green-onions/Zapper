    <h1>Program</h1>
    <div class="col-12">
        <table class="table text-white">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ program.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ program.title }}</td>
                </tr>
                <tr>
