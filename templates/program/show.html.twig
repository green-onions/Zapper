{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="row col-12 m-0 d-flex justify-content-between">
        <div class="row">
            <h1 class="title-admin">{{ program.title }}</h1>
            <h2 class="pt-1"><a href="{{ path('program_index') }}"><i class="fa fa-arrow-left"></i></a></h2>
            <h2 class="pt-2"><a href="{{ path('program_edit', {'slug': program.slug}) }}"><i class="fa fa-edit"></i></a></h2>
        </div>
        <div class="d-flex align-items-center">
            {{ include('program/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="row col-12 m-0">
        <div class="col-9 p-0">
            <table class="table text-white">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ program.id }}</td>
                    </tr>
                    <tr>
                        <th>Catégorie</th>
                        <td>{{ program.category.name }}</td>
                    </tr>
                    <tr>
                        <th>Saisons</th>
                        <td>{{ program.seasons.count }}</td>
                    </tr>
                    <tr>
                        <th>Résumé</th>
                        <td>{{ program.summary }}</td>
                    </tr>
                    <tr>
                        <th>Acteur·rice·s</th>
                        <td>
                            {% for actor in program.actors %}
                                <a href="{{ path('actor_show', {'slug': actor.slug}) }}">{{ actor.name }}</a>{{- not loop.last ? ', ' : '' -}}
                            {% else %}
                                Aucun·e acteur·rice pour cette série
                            {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-3 pr-0">
            <img class="poster-show-admin" src="{{ program.poster }}" alt="">
        </div>
    </div>
{% endblock %}
