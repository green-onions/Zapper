{% extends 'base.html.twig' %}

{% block title %}{{ season.program.title }} - Saison {{ season.number }}{% endblock %}

{% block body %}
    <div class="row col-12 m-0 d-flex justify-content-between">
        <div class="row">
            <h1 class="title-admin">{{ season.program.title }} - Saison {{ season.number }}</h1>
            <h2 class="pt-1"><a href="{{ path('season_index') }}"><i class="fa fa-arrow-left"></i></a></h2>
            <h2 class="pt-2"><a href="{{ path('season_edit', {'id': season.id}) }}"><i class="fa fa-edit"></i></a></h2>
        </div>
        <div class="d-flex align-items-center">
            {{ include('season/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="row col-12 m-0">
        <table class="table text-white">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
