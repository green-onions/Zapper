{% extends 'base.html.twig' %}

{% block title %}Les saisons de {{ program.title }}{% endblock %}

{% block body %}
    <h1>Toutes les saisons<br> de '{{ program.title }}'</h1>
    <div class="row col-12">
        {% for season in seasons %}
            <div class="col-3">
                <div class="card col-12">
                    <div class="card-body">
                        <h5 class="card-title text-dark">Saison {{ season.number }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ season.year }}</h6>
                        <p class="card-text text-dark">{{ season.description }}</p>
                        <a href="/zapper/season/{{ season.id }}" class="card-link card-link-season">Liste des Ã©pisodes</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}