{% extends 'base.html.twig' %}

{% block title %}{{ slug }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3 poster-show-user" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body pr-5">
            <h1 class="mt-3 ml-0 text-left">{{ program.title }}</h1>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>{{ program.seasons.count }} saisons</p>
            <p>{{ program.summary }}</p>
            <p>
                Acteur·rice·s :
                {% for actor in program.actors %}
                    {{ actor.name }}{{- not loop.last ? ', ' : '' -}}
                {% else %}
                    Aucun·e acteur·rice pour cette série
                {% endfor %}
            </p>

            <h2 class="ml-0"><a href="{{ path('app_index') }}"><i class="fa fa-arrow-left"></i></a></h2>
        </div>
    </div>
{% endblock %}
