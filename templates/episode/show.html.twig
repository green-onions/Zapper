{% extends 'base.html.twig' %}

{% block title %}{{ episode.season.program.title }}, S. {{ episode.season.number }}, Ep. {{ episode.number }}{% endblock %}

{% block body %}
    <div class="row col-12 m-0 d-flex justify-content-between">
        <div class="row">
            <h1 class="title-admin">{{ episode.season.program.title }}, S. {{ episode.season.number }}, Ep. {{ episode.number }}</h1>
            <h2 class="pt-1"><a href="{{ path('episode_index') }}"><i class="fa fa-arrow-left"></i></a></h2>
            <h2 class="pt-2"><a href="{{ path('episode_edit', {'id': episode.id}) }}"><i class="fa fa-edit"></i></a></h2>
        </div>
        <div class="d-flex align-items-center">
            {{ include('episode/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="row col-12 m-0">
        <table class="table text-white">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ episode.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ episode.title }}</td>
                </tr>
                <tr>
                    <th>Num√©ro</th>
                    <td>{{ episode.number }}</td>
                </tr>
                <tr>
                    <th>Synopsis</th>
                    <td>{{ episode.synopsis }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
